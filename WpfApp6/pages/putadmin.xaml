<Page x:Class="WpfApp6.pages.putadmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="putadmin">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
           
            <ColumnDefinition Width="*"/>
            <!-- Center column -->
            <ColumnDefinition Width="200"/>
            <!-- Right column -->
        </Grid.ColumnDefinitions>

        <!-- Left Column -->
        <StackPanel Grid.Column="0" Background="LightGray">
            <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="buttonbron" Content="бронирование"  Margin="15,3,15,3" Click="buttonbron_Click"/>
            <Button x:Name="btncvet" Content="цвета машин"  Margin="15,3,15,3"/>
            <Button x:Name="btncar" Content="машины"  Margin="15,3,15,3" Click="btncar_Click_1"/>
            <Button x:Name="btncompl" Content="комплектация" Margin="15,3,15,3"/>
            <Button x:Name="btnsalon" Content="Салон машины" Margin="15,3,15,3"/>
            <!-- Add more controls as needed -->
        </StackPanel>

        <!-- Center Column -->
        <StackPanel Grid.Column="1" Background="White">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <!-- Add more controls as needed -->
        </StackPanel>

        <!-- Right Column -->
        <StackPanel Grid.Column="2" Background="LightGray">
            <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="btnmarka" Content="марки" Click="Button_Click" Margin="15,3,15,3"/>
            <Button x:Name="btnstrana" Content="страны производители" Click="Button_Click" Margin="15,3,15,3"/>
            <Button x:Name="btnrol" Content="роли" Click="Button_Click" Margin="15,3,15,3"/>
            <Button x:Name="btnuser" Content="пользователи" Click="Button_Click" Margin="15,3,15,3"/>
            <Button x:Name="btnizbr" Content="избранные машины" Margin="15,3,15,3"/>
            <!-- Add more controls as needed -->
        </StackPanel>
    </Grid>
</Page>
