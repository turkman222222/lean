<Page x:Class="WpfApp6.pages.autoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <!-- Фоновый градиент -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF0F2027" Offset="0"/>
                <GradientStop Color="#FF203A43" Offset="0.5"/>
                <GradientStop Color="#FF2C5364" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Основная карточка -->
        <Border Width="320" Height="380" Background="#1E1E1E" 
                CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="#FF3A7CA5" BorderThickness="1"
               >
            <StackPanel VerticalAlignment="Center" Margin="20">

                <!-- Заголовок -->
                <TextBlock Text="Авторизация" 
                           FontSize="24" 
                           Foreground="White" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Поле логина -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Логин" 
                               Foreground="#FFA0A0A0" 
                               Margin="5,0,0,5"
                               FontSize="14"/>
                    <TextBox x:Name="txtLogin" 
                             
                             
                             
                             FontSize="14"
                             Padding="10,8"
                             Height="40"/>
                </StackPanel>

                <!-- Поле пароля -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Пароль" 
                               Foreground="#FFA0A0A0" 
                               Margin="5,0,0,5"
                               FontSize="14"/>
                    <PasswordBox x:Name="passBoxpassword" 
                               
                                 
                                 BorderBrush="#FF3A7CA5"
                                 FontSize="14"
                                 Padding="10,8"
                                 Height="40"/>
                </StackPanel>

                <!-- Кнопки -->
                <Button x:Name="btnAutoriz" 
                        Content="Войти" 
                       
                        Background="#FF3A7CA5"
                        Foreground="White"
                        FontSize="14"
                        Height="40"
                        Margin="0,0,0,15"
                        Click="btnAutoriz_Click"
                        Cursor="Hand"/>

                <Button x:Name="btnReg" 
                        Content="Регистрация" 
                        
                        Foreground="#FF3A7CA5"
                        FontSize="14"
                        Height="40"
                        Click="btnReg_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>