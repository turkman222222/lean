<Page x:Class="WpfApp6.pages.userpanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="userpanel">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <ComboBox x:Name="vidRecept" HorizontalAlignment="Center"  Margin="5" VerticalAlignment="Center" Width="209" SelectionChanged="vidRecept_SelectionChanged"/>
            <ComboBox x:Name="filtr" HorizontalAlignment="Center" Margin="5"  VerticalAlignment="Center" Width="190" SelectionChanged="filtr_SelectionChanged"/>
            <TextBox x:Name="txttxt" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap"  VerticalAlignment="Center" Width="186" TextChanged="txttxt_TextChanged"/>
        </StackPanel>
        <ListView x:Name="Prod" Grid.Row="1" SelectionChanged="Prod_SelectionChanged"  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="200"/>

                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding CurrentPhoto}" Grid.Column="0"/>
                        <StackPanel   Grid.Column="1" Width="auto" Orientation="Vertical" HorizontalAlignment="Left">
                            <TextBlock Grid.Column="1" Width="auto" TextWrapping ="Wrap" Height="auto" Text="{Binding model}"/>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto"><Run Text="марка" /><Run Text=" "/><Run Text="{Binding Marks.name_marka}"/></TextBlock>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto"><Run Text="страна" /><Run Text=" "/><Run Text="{Binding strana.strana}"/></TextBlock>

                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto"><Run Text="Цвет" /><Run Text=" "/><Run Text="{Binding cveta.cvet_name}"/></TextBlock>



                        </StackPanel>

                        <StackPanel   Grid.Column="2" Width="auto" Orientation="Vertical" HorizontalAlignment="Left">
                            <TextBlock Grid.Column="1" Width="auto" TextWrapping ="Wrap" Height="auto" Text="{Binding price}"/>


                        </StackPanel>


                    </Grid>
                </DataTemplate>



            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="В избранное" Width="128" Height="28" Click="Button_Click_1" />
            <Button Content="Избранные" Margin="15,15,15,15" Width="128" Height="28" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Page>
